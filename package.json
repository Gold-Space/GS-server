{
  "name": "nest-server",
  "version": "0.2.2",
  "description": "the RESTful API service for G Space, powered by @nestjs.",
  "author": "Wibus",
  "private": false,
  "license": "GPL-3.0",
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "bundle": "rimraf out && yarn run build && cd dist/src && npx ncc build main.js -o ../../out -m && cd ../.. && chmod +x out/index.js",
    "format": "prettier --write \"**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=development nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:ncc": "node index.js --DB_DATABASE=test-server --DB_HOST=127.0.0.1 --DB_PORT=3306 --DB_USERNAME=root --DB_PASSWORD=moonwibus",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "commit": "git add . && cz && git push",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "init:Cli": "npm install -g commitizen && npm install -g conventional-changelog-cli && brew install cloc",
    "cloc": "cloc ./src",
    "upstream": "sh ./scripts/upstream.sh",
    "test": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.js",
    "prod:start": "cross-env NODE_ENV=production node dist/main",
    "prod:pm2": "pm2 start ecosystem.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:del": "pm2 delete ecosystem.config.js"
  },
  "dependencies": {
    "@nestjs/common": "8.4.5",
    "@nestjs/config": "1.2.1",
    "@nestjs/core": "8.4.5",
    "@nestjs/jwt": "8.0.0",
    "@nestjs/passport": "8.2.1",
    "@nestjs/platform-express": "8.4.5",
    "@nestjs/schedule": "^1.0.2",
    "@nestjs/swagger": "5.2.1",
    "@nestjs/typeorm": "8.0.3",
    "axios": "0.27.2",
    "axios-retry": "^3.2.4",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.2",
    "crypto": "1.0.1",
    "ejs": "^3.1.7",
    "express": "4.17.3",
    "mysql2": "2.3.3",
    "nodemailer": "6.7.5",
    "passport": "0.5.3",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.5",
    "source-map-support": "0.5.21",
    "swagger-ui-express": "4.3.0",
    "typeorm": "0.2.45",
    "xml2js": "^0.4.23",
    "xss": "1.0.11",
    "zx": "4.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "8.2.5",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/testing": "8.4.5",
    "@types/express": "4.17.13",
    "@types/jest": "27.5.1",
    "@types/node": "16.11.36",
    "@types/nodemailer": "6.4.4",
    "@types/passport-jwt": "3.0.6",
    "@types/passport-local": "1.0.34",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.25.0",
    "@typescript-eslint/parser": "5.25.0",
    "@vercel/ncc": "^0.33.3",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "8.0.1",
    "jest": "28.1.0",
    "lint-staged": "^12.3.7",
    "os": "^0.1.2",
    "prettier": "2.6.2",
    "supertest": "6.2.3",
    "ts-jest": "28.0.2",
    "ts-node": "10.5.0",
    "tsconfig-paths": "3.12.0",
    "typescript": "4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
