{
  "name": "@nx-space/core",
  "version": "1.5.3",
  "description": "The RESTful API service for NEXT Space, more features, powered by @nestjs.",
  "author": "Wibus <https://iucky.cn>",
  "license": "AGPLv3",
  "repository": {
    "directory": "nx-space/core",
    "url": "https://github.com/nx-space/core"
  },
  "homepage": "https://github.com/nx-space/core#readme",
  "issues": "https://github.com/nx-space/core/issues",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache --fix"
    ]
  },
  "bump": {
    "before": [
      "git pull --rebase"
    ]
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "dev": "npm run start",
    "bundle": "rimraf out && pnpm run build && cd dist && npx ncc build main.js -o ../out -m",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "cross-env NODE_ENV=development nest start -w",
    "start:dev": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prod": "cross-env NODE_ENV=production pm2-runtime start ecosystem.config.js",
    "prod:pm2": "cross-env NODE_ENV=production pm2 restart ecosystem.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:debug": "cross-env NODE_ENV=production nest start --debug --watch",
    "test": "vitest",
    "test:e2e": "vitest -c ./vitest-e2e.config.ts",
    "test:all": "npm run test && npm run test:e2e",
    "test:watch": "vitest --watch",
    "test:cov": "vitest --coverage",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
